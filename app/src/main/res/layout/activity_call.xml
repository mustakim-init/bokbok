<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/call_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:fillViewport="true">


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Room Info Section -->
            <TextView
                android:id="@+id/roomIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Status Section -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Connecting..."
                    android:textSize="14sp"
                    android:gravity="center" />

                <ProgressBar
                    android:id="@+id/statusSpinner"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:visibility="visible"
                    android:indeterminate="true" />
            </LinearLayout>

            <!-- Control Buttons - Adaptive Layout -->
            <!-- For small screens: 2x2 grid, for larger screens: 1x4 row -->
            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/buttonGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="2"
                app:rowCount="2"
                android:layout_marginBottom="16dp"
                app:alignmentMode="alignBounds"
                app:columnOrderPreserved="false">

                <Button
                    android:id="@+id/muteButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="Mute"
                    android:textSize="14sp"
                    android:minWidth="80dp" />

                <ToggleButton
                    android:id="@+id/pttToggle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:textOff="PTT Off"
                    android:textOn="PTT On"
                    android:textSize="14sp"
                    android:minWidth="80dp" />

                <Button
                    android:id="@+id/settingsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="Settings"
                    android:textSize="14sp"
                    android:minWidth="80dp" />

                <Button
                    android:id="@+id/leaveButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:text="Leave"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:minWidth="80dp" />
            </androidx.gridlayout.widget.GridLayout>

            <!-- Participants Section -->
            <TextView
                android:id="@+id/participantsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participants:"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <ListView
                android:id="@+id/participantsList"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="8dp" />

            <!-- Connection Info -->
            <TextView
                android:id="@+id/connectionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connection: unknown"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Volume Control -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/volumeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume"
                        android:layout_marginEnd="12dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/receiveVolume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="200"
                        android:progress="100" />
                </LinearLayout>

                <TextView
                    android:id="@+id/volumeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Spacer for bottom padding -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Floating PTT Button -->
    <Button
        android:id="@+id/pttFloatButton"
        android:contentDescription="Push to talk button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:alpha="0.85"
        android:background="@drawable/ptt_circle"
        android:text="ðŸŽ¤"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="gone"
        android:elevation="8dp" />
</FrameLayout>