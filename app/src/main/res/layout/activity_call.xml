<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/roomIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Connecting..."
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/statusSpinner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:visibility="visible"
            android:indeterminate="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/muteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mute" />

            <ToggleButton
                android:id="@+id/pttToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="PTT Off"
                android:textOn="PTT On"
                android:layout_marginStart="12dp" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginStart="12dp" />

            <Button
                android:id="@+id/leaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave"
                android:layout_marginStart="12dp"
                android:backgroundTint="@android:color/holo_red_dark" />
        </LinearLayout>

        <TextView
            android:id="@+id/participantsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participants:"
            android:textSize="16sp"
            android:layout_marginTop="18dp" />

        <ListView
            android:id="@+id/participantsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/connectionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection: unknown"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Floating circular PTT button -->
    <Button
        android:id="@+id/pttFloatButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:alpha="0.55"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:background="@drawable/ptt_circle"
        android:text="ðŸŽ¤"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

</FrameLayout>
